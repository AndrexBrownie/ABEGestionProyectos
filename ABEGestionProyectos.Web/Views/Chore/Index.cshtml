        </header>
        <br />

        <table class="table table-striped c_table table-sm">
            <thead class="thead-dark">
                <tr role="row">
                    <th style="width: 5%;">ID</th>
                    <th style="width: 10%;">NOMBRE</th>
                    <th style="width: 10%;">PUNTOS</th>
                    <th style="width: 10%;">ESTADO</th>
                    <th style="width: 20%;">PERSONA</th>
                    <th style="width: 30%;">HISTORIA USUARIO</th>
                    <th style="width: 15%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ChoreID</td>
                        <td>@item.Name</td>
                        <td>@item.Points</td>
                        <td>@item.State</td>
                        <td>@item.Person.Name</td>
                        <td>@item.UserHistory.Title</td>
                        <td>
                            <a class="btn btn-info" asp-action="edit" asp-route-id="@item.ChoreID">Editar</a>
                            <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.ChoreID" onclick="return confirm('Está seguro de eliminar @item.Name?')">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
